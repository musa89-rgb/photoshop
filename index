    <script>
        window.onload = function () {
            
            function wrapLabel(label) {
                if (label.length <= 16) { return label; }
                const words = label.split(' ');
                const lines = [];
                let currentLine = '';
                for (const word of words) {
                    const testLine = currentLine.length > 0 ? currentLine + ' ' + word : word;
                    if (testLine.length > 16) {
                        lines.push(currentLine);
                        currentLine = word;
                    } else {
                        currentLine = testLine;
                    }
                }
                lines.push(currentLine);
                return lines;
            }

            const tooltipTitleCallback = function(tooltipItems) {
                const item = tooltipItems[0];
                let label = item.chart.data.labels[item.dataIndex];
                if (Array.isArray(label)) {
                    return label.join(' ');
                } else {
                    return label;
                }
            };
            
            const baseChartOptions = {
                maintainAspectRatio: false,
                responsive: true,
                plugins: {
                    tooltip: {
                        callbacks: {
                            title: tooltipTitleCallback
                        }
                    }
                }
            };

            const ctxRadar = document.getElementById('fileFormatChart').getContext('2d');
            const rawLabels = ['Editing', 'Small File Size', 'Web Use', 'Transparency Support', 'Print Quality'];
            const processedLabels = rawLabels.map(wrapLabel);
            
            new Chart(ctxRadar, {
                type: 'radar',
                data: {
                    labels: processedLabels,
                    datasets: [
                        {
                            label: 'PSD',
                            data: [10, 2, 5, 10, 8],
                            borderColor: '#BC5090',
                            backgroundColor: 'rgba(188, 80, 144, 0.2)',
                            pointBackgroundColor: '#BC5090',
                            pointBorderColor: '#fff',
                            pointHoverBackgroundColor: '#fff',
                            pointHoverBorderColor: '#BC5090'
                        },
                        {
                            label: 'JPEG',
                            data: [2, 10, 10, 0, 3],
                            borderColor: '#EF5675',
                            backgroundColor: 'rgba(239, 86, 117, 0.2)',
                            pointBackgroundColor: '#EF5675',
                            pointBorderColor: '#fff',
                            pointHoverBackgroundColor: '#fff',
                            pointHoverBorderColor: '#EF5675'
                        },
                        {
                            label: 'PNG',
                            data: [4, 7, 9, 10, 5],
                            borderColor: '#FF764A',
                            backgroundColor: 'rgba(255, 118, 74, 0.2)',
                            pointBackgroundColor: '#FF764A',
                            pointBorderColor: '#fff',
                            pointHoverBackgroundColor: '#fff',
                            pointHoverBorderColor: '#FF764A'
                        },
                        {
                            label: 'TIFF',
                            data: [8, 1, 3, 8, 10],
                            borderColor: '#FFA600',
                            backgroundColor: 'rgba(255, 166, 0, 0.2)',
                            pointBackgroundColor: '#FFA600',
                            pointBorderColor: '#fff',
                            pointHoverBackgroundColor: '#fff',
                            pointHoverBorderColor: '#FFA600'
                        }
                    ]
                },
                options: {
                    ...baseChartOptions,
                    scales: {
                        r: {
                            angleLines: { color: '#E5E7EB' },
                            grid: { color: '#E5E7EB' },
                            pointLabels: {
                                font: {
                                    size: 13,
                                    weight: '600'
                                },
                                color: '#003F5C'
                            },
                            ticks: {
                                backdropColor: '#F8F9FA',
                                backdropPadding: 4,
                                color: '#003F5C',
                                stepSize: 2,
                                font: {
                                    weight: '600'
                                }
                            }
                        }
                    },
                    plugins: {
                        ...baseChartOptions.plugins,
                        legend: {
                            position: 'top',
                            labels: {
                                color: '#003F5C',
                                font: {
                                    size: 14,
                                    weight: '600'
                                }
                            }
                        }
                    }
                }
            });

            // --- Gemini API Integration ---
            const geminiSubmit = document.getElementById('gemini-submit');
            const geminiPrompt = document.getElementById('gemini-prompt');
            const geminiLoader = document.getElementById('gemini-loader');
            const geminiResultContainer = document.getElementById('gemini-result-container');
            const presetButtons = document.querySelectorAll('.gemini-preset-prompt');

            const apiKey = ""; 
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`;

            async function fetchWithRetry(url, options, retries = 5, delay = 1000) {
                try {
                    const response = await fetch(url, options);
                    if (!response.ok) {
                        const errorData = await response.json();
                        throw new Error(`API Error: ${response.status} ${JSON.stringify(errorData)}`);
                    }
                    return response.json();
                } catch (error) {
                    if (retries > 0) {
                        await new Promise(res => setTimeout(res, delay));
                        return fetchWithRetry(url, options, retries - 1, delay * 2);
                    } else {
                        console.error("Gemini API call failed after retries:", error);
                        throw error;
                    }
                }
            }

            async function callGemini(prompt) {
                geminiLoader.style.display = 'block';
                geminiResultContainer.style.display = 'none';
                geminiResultContainer.textContent = '';

                const systemPrompt = "Anda adalah asisten guru DKV yang ramah dan membantu. Jelaskan konsep-konsep desain dan Photoshop dengan bahasa yang mudah dipahami untuk siswa SMK (Kelas 10). Jaga agar jawaban tetap singkat, jelas, dan fokus (maksimal 2-3 paragraf). Gunakan bahasa Indonesia.";
                
                const payload = {
                    contents: [{ parts: [{ text: prompt }] }],
                    systemInstruction: {
                        parts: [{ text: systemPrompt }]
                    },
                };

                try {
                    const result = await fetchWithRetry(apiUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    const text = result.candidates?.[0]?.content?.parts?.[0]?.text;

                    if (text) {
                        geminiResultContainer.textContent = text;
                        geminiResultContainer.style.display = 'block';
                    } else {
                        geminiResultContainer.textContent = 'Maaf, terjadi kesalahan saat mengambil jawaban. Silakan coba lagi.';
                        geminiResultContainer.style.display = 'block';
                    }
                } catch (error) {
                    console.error('Error calling Gemini:', error);
                    geminiResultContainer.textContent = 'Maaf, terjadi kesalahan koneksi. Periksa konsol untuk detailnya.';
                    geminiResultContainer.style.display = 'block';
                } finally {
                    geminiLoader.style.display = 'none';
                }
            }

            geminiSubmit.addEventListener('click', () => {
                const prompt = geminiPrompt.value;
                if (prompt.trim()) {
                    callGemini(prompt);
                }
            });

            presetButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const prompt = button.dataset.prompt;
                    geminiPrompt.value = prompt;
                    callGemini(prompt);
                });
            });
            
        };
    </script>
</body>
</html>

